<html lang="en-gb">
<header>
    <%- include('_head') -%>

</header>
<nav>
    <%- include('_header') -%>
</nav>

<body>
    <main>
        <h2>Users</h2>
        <ol>
            <% results.forEach(function(user) {%>
                <li>

                    <a href="/users/<%=user.id%>">
                        <%= user.name %>
                    </a>
                    <% }); %>
        </ol>
        <%if (next) { %>
            <a href="<%= next %>">Next</a>
            <% } %>
                <%if (previous) { %>
                    <a href="<%= previous %>">Previous</a>
                    <% } %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="/users/create">Create User</a>
    </main>
    <footer>
        <%- include('_footer') -%>
    </footer>
</body>

</html>